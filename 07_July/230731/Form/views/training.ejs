<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            setDateBox();
        });
        function setDateBox() {
            var date = new Date();
            var start_year = '1940';
            var current_year = date.getFullYear();

            for (var y = (start_year); y <= (current_year); y++) {
                $("#year").append("<option value='" + y + "'>" + y + "</option>");
                $("#year2").append("<option value='" + y + "'>" + y + "</option>");
            }

            for (var i = 1; i <= 12; i++) {
                if (String(i).length == '1') {
                    $("#month").append("<option value='" + "0" + i + "'>" + "0" + i + "</option>");
                } else {
                    $("#month").append("<option value='" + i + "'>" + i + "</option>");
                }
                if (String(i).length == '1') {
                    $("#month2").append("<option value='" + "0" + i + "'>" + "0" + i + "</option>");
                } else {
                    $("#month2").append("<option value='" + i + "'>" + i + "</option>");
                }
            }

            for (var i = 1; i <= 31; i++) {
                if (String(i).length == '1') {
                    $("#day").append("<option value='" + "0" + i + "'>" + "0" + i + "</option>");
                } else {
                    $("#day").append("<option value='" + i + "'>" + i + "</option>");
                }
                if (String(i).length == '1') {
                    $("#day2").append("<option value='" + "0" + i + "'>" + "0" + i + "</option>");
                } else {
                    $("#day2").append("<option value='" + i + "'>" + i + "</option>");
                }
            }
        }
    </script>
</head>

<body>
    <h1>GET</h1>
    <form action="/getForm" method="get">
        <label for="name">이름</label><input type="text" name="name" id="name">
        <br>
        <fieldset>
            <legend>성별</legend>
            <input type="radio" name="gender" value="남자">
            <label for="m">남자</label>
            <input type="radio" name="gender" value="여자">
            <label for="f">여자</label>
        </fieldset>
        <br>
        <fieldset>
            <legend>생년월일</legend>
            <select name="year" id="year">
                <!-- <%for(let i=1940; i < 2023; i ++) {%>
                    <option value="<%=i%>">
                        <%=i%>
                    </option>
                    <% } %> -->
            </select>
            <label for="year">년</label>
            <select name="month" id="month">
                <!-- <%for(let i=1; i <= 12; i ++) {%>
                    <option value="<%=i%>">
                        <%=i%>
                    </option>
                    <% } %> -->
            </select>
            <label for="month">월</label>
            <select name="day" id="day">
                <!-- <%for(let i=1; i <= 31; i ++) {%>
                    <option value="<%=i%>">
                        <%=i%>
                    </option>
                    <% } %> -->
            </select>
            <label for="day">일</label>
        </fieldset>
        <br>
        <fieldset>
            <legend>관심사</legend>
            <input type="checkbox" name="interest" value="여행">
            <label for="travel">여행</label>
            <input type="checkbox" name="interest" value="패션">
            <label for="fashion">패션</label>
            <input type="checkbox" name="interest" value="음식">
            <label for="food">음식</label>
        </fieldset>
        <br>
        <button type="submit">회원가입</button>
    </form>

    <br>
    <hr>

    <h1>POST</h1>
    <form action="/postForm" method="post">
        <label for="name">이름</label><input type="text" name="name" id="name" required>
        <br>
        <fieldset required>
            <legend>성별</legend>
            <input type="radio" name="gender" value="남자">
            <label for="m">남자</label>
            <input type="radio" name="gender" value="여자">
            <label for="f">여자</label>
        </fieldset>
        <br>
        <fieldset>
            <legend>생년월일</legend>
            <select name="year" id="year2">
            </select>
            <label for="year">년</label>
            <select name="month" id="month2">
            </select>
            <label for="month">월</label>
            <select name="day" id="day2">
            </select>
            <label for="day">일</label>
        </fieldset>
        <br>
        <fieldset>
            <legend>관심사</legend>
            <input type="checkbox" name="interest" value="여행">
            <label for="travel">여행</label>
            <input type="checkbox" name="interest" value="패션">
            <label for="fashion">패션</label>
            <input type="checkbox" name="interest" value="음식">
            <label for="food">음식</label>
        </fieldset>
        <br>
        <fieldset>
            <legend>선택</legend>
            <label for="color">좋아하는 색상 </label>
            <input type="color" name="color" id="color">
            <br>
            <label for="number">좋아하는 숫자 </label>
            <input type="number" name="number" id="number">
        </fieldset>
        <br>
        <button type="submit">회원가입</button>
    </form>
</body>

</html>